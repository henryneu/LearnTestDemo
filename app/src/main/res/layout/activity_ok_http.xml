<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/test_ok_http_sync_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试OkHttp-sync"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test_ok_http_async_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试OkHttp-Async"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test_retrofit_sync_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试Retrofit-sync"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/test_retrofit_async_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试Retrofit-async"
        android:textSize="18sp"
        android:textAllCaps="false" />

</LinearLayout>